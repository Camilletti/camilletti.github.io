	note = {arXiv:2205.09112 [astro-ph, physics:gr-qc]},
	keywords = {General Relativity and Quantum Cosmology, Astrophysics - High Energy Astrophysical Phenomena},
	file = {arXiv Fulltext PDF:/home/alessandro/snap/zotero-snap/common/Zotero/storage/WYYE65MR/Breschi et al. - 2022 - Kilohertz Gravitational Waves From Binary Neutron .pdf:application/pdf;arXiv.org Snapshot:/home/alessandro/snap/zotero-snap/common/Zotero/storage/C3KLCETQ/2205.html:text/html},
