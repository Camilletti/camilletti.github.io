	note = {Publisher: IOP Publishing},
	pages = {085011},
	file = {IOP Full Text PDF:/home/alessandro/snap/zotero-snap/common/Zotero/storage/A3TAFA9V/Gonzalez et al. - 2023 - Second release of the CoRe database of binary neut.pdf:application/pdf},
