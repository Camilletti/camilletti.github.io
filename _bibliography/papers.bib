	pages = {4760--4781},
	file = {Full Text PDF:/home/alessandro/snap/zotero-snap/common/Zotero/storage/SEVNXRLE/Camilletti et al. - 2022 - Numerical relativity simulations of the neutron st.pdf:application/pdf;Snapshot:/home/alessandro/snap/zotero-snap/common/Zotero/storage/WM9DUV3T/6677417.html:text/html},
