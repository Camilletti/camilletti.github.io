@article{gonzalez_second_2023,
	title = {Second release of the {CoRe} database of binary neutron star merger waveforms},
	volume = {40},
	copyright = {Creative Commons Attribution-NonCommercial-NoDerivatives 4.0 International License (CC-BY-NC-ND)},
