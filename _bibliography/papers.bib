	number = {8},
	urldate = {2023-10-26},
	journal = {Classical and Quantum Gravity},
	author = {Gonzalez, Alejandra and Zappa, Francesco and Breschi, Matteo and Bernuzzi, Sebastiano and Radice, David and Adhikari, Ananya and Camilletti, Alessandro and Chaurasia, Swami Vivekanandji and Doulis, Georgios and Padamata, Surendra and Rashti, Alireza and Ujevic, Maximiliano and Brügmann, Bernd and Cook, William and Dietrich, Tim and Perego, Albino and Poudel, Amit and Tichy, Wolfgang},
	month = mar,
